<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TeacherApp.ViewModels"
             x:Class="TeacherApp.Views.StudentsPage"
             BackgroundColor="{DynamicResource Background}"
             Title="Список группы">
    <ContentPage.BindingContext>
        <vm:StudentsViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <StackLayout HorizontalOptions="Center"
                     Margin="15">
            <Label Text="Для выставления оценок выберете студента"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   FontSize="22"
                   TextColor="{StaticResource FontColor}"/>
        </StackLayout>
            

        <Label Text="Список группы"
               Grid.Row="1"
               TextColor="{StaticResource FontColor}"
               Margin="5,0,0,0"/>

        <Grid Grid.Row="2" 
              BackgroundColor="Gray">
            <Grid BackgroundColor="{StaticResource BackgroundListView}" 
                  Margin="0,1,0,1">
                <Grid>
                    <StackLayout>
                        <CollectionView BackgroundColor="{StaticResource BackgroundListView}"
                                        Margin="0,0,0,0"
                                        SelectionMode="Single"
                                        ItemsSource="{Binding Students}"
                                        SelectedItem="{Binding SelectedStudent}"
                                        SelectionChangedCommand="{Binding SelectStudentCommand}"
                                        HorizontalScrollBarVisibility="Never">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0"
                                                     Margin="0,0,10,0">
                                            <Image Source="grades.png"
                                                   WidthRequest="25"/>
                                        </StackLayout>
                                        
                                        <Label Text="{Binding Name}"
                                               Grid.Column="1"
                                               TextColor="{StaticResource FontColor}"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Center"
                                               FontSize="18"/>

                                        

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal" />
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="Background" Value="{StaticResource SelectedItemGradient}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>